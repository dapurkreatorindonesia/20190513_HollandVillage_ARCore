<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffff">

    <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/buttonSurvey"
            android:src="@mipmap/ic_launcher"
            android:layout_below="@+id/textView6"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Versi 1.2"
            android:id="@+id/textView4"
            android:layout_below="@+id/buttonSurvey"
            android:layout_centerHorizontal="true" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Created by:"
            android:id="@+id/textView5"
            android:layout_below="@+id/textView4"
            android:layout_toStartOf="@+id/center"
            android:layout_marginRight="65dp"
            android:layout_marginTop="7dp" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:id="@+id/textView6"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="150dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Yudi Afdaludin"
            android:id="@+id/textView7"
            android:layout_below="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:textSize="20dp"
            android:layout_marginTop="7dp" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="2015101764"
            android:id="@+id/textView8"
            android:layout_below="@+id/textView7"
            android:layout_alignStart="@+id/textView7"
            android:textSize="15dp" />

    <ImageView
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:id="@+id/iv_logo_kampus"
            android:src="@drawable/logokampus"
            android:scaleType="fitXY"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textView19"
            android:layout_marginTop="7dp" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Sistem Informasi 2015"
            android:id="@+id/textView19"
            android:layout_below="@+id/textView8"
            android:layout_alignStart="@+id/textView8" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/center"
            android:layout_centerHorizontal="true" />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:src="@drawable/photo"
            android:layout_alignTop="@+id/textView7"
            android:layout_toEndOf="@+id/center"
            android:layout_above="@+id/iv_logo_kampus"
            android:scaleType="fitStart"
            android:layout_marginLeft="35dp" />

</RelativeLayout>